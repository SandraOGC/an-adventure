{
	"scss": {
		"src": [
			"scss/**/*.scss",
			"scss/**/**/*.scss"
		],
		"dest": "styles/"
	},
	"js": {
		"src": [
			"scripts/main.js",
			"scripts/heroes/icons.js",
			"scripts/heroes/movement.js",
			"scripts/maps/borders.js",
			"scripts/maps/objects.js"
		],
		"dest": "scripts/"
	},
	"images": "images/**/*.{gif,jpg,png,svg}",
	"html": [
    "**/*.html",
    "!node_modules/**/*.*"
  ]
}
